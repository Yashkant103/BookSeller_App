@model BookSeller_App.Models.UserModel
<h2>Register Page</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Post" asp-controller="User">
            @Html.HiddenFor(x => x.UserID)
            <div class="form-group m-3">
                <label asp-for="UserName" class="control-label">User Name :</label>
                <input type="text" asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="UserEmail" class="control-label">User Email :</label>
                <input type="text" asp-for="UserEmail" class="form-control" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="UserPassword" class="control-label">Password :</label>
                <input type="password" asp-for="UserPassword" class="form-control" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="RoleID" class="control-label">Role ID :</label>
                <select class="form-control" asp-for="RoleID" asp-items="@(new SelectList(ViewBag.RoleList ,"RoleID","RoleName"))">
                    <option value="">Select Role</option>
                </select>
                <span asp-validation-for="RoleID" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="IsActive" class="control-label">Active [True/False] :</label>
                @* <input type="checkbox" @(Model.IsActive == true ? "checked" : " ") name="IsActive "/>  *@
                <input type="text" asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-info" asp-action="GetAllUsers">Back To List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}