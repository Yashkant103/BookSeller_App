@model IEnumerable<BookSeller_App.Models.AuthorModel>

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title mb-0">Author Tables</h5>
                        <a asp-action="AddAuhtor" class="btn btn-success" asp-controller="Author"><i class="bi bi-plus-circle"></i> Add Author</a>
                    </div>
                    @{
                        if (TempData["Message"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @TempData["Message"]
                            </div>
                        }
                    }
                    <table class="table table-striped table-hover mt-3">
                        <thead class="thead-dark">
                            <tr>
                                <th>AuthorID</th>
                                <th>AuthorName</th>
                                <th>AuthorEmail</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>@data.AuthorID</td>
                                    <td>@data.AuthorName</td>
                                    <td>@data.AuthorEmail</td>
                                    <td>@data.Created @*.ToString("dd-MM-yyyy")*@</td>
                                    <td>@data.Modified @*.ToString("dd-MM-yyyy")*@</td>
                                    <td>
                                        <a asp-action="Edit" asp-controller="Author" asp-route-AuthorID="@data.AuthorID" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                                        <a asp-action="DeleteAuthor" asp-controller="Author" onclick="return confirm('Are you sure you want to delete this author?')" asp-route-AuthorID="@data.AuthorID" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function conformedelete() {
            if (confirm("are you sure to delete this record??")) {
                return true;
            }
            else {
                return false;
            }
        }
    </script>
}